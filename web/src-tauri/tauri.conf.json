{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StormHacks Desktop",
  "version": "0.0.1",
  "identifier": "com.stormhacks.desktop",
  "build": {
    "beforeDevCommand": "bun run dev -- --host 127.0.0.1 --port 1420 --strictPort",
    "beforeBuildCommand": "bun run tauri:build:frontend",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "StormHacks Desktop",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage",
      "rpm",
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/32x32@2x.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/app-icon.png",
      "icons/stormhacks_desktop.png"
    ],
    "linux": {
      "deb": {
        "desktopTemplate": "templates/app.desktop",
        "depends": [
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "libwebkit2gtk-4.1-0"
        ]
      },
      "rpm": {
        "desktopTemplate": "templates/app.desktop"
      }
    },
    "windows": {
      "wix": {
        "language": {
          "en-US": {}
        }
      }
    }
  }
}
